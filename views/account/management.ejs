<section class="account-management">
  <%- messages() %>

  <h1><%= typeof title !== "undefined" ? title : "Account Management" %></h1>

  <% if (locals.accountData) { %>
    <% const account = locals.accountData %>

    <% if (account.account_type === "Client") { %>
      <p class="account-greeting">Welcome <%= account.account_firstname %></p>
    <% } else { %>
      <h2>
        <%= account.account_type === "Admin"
          ? "Welcome Admin " + account.account_firstname
          : "Welcome Employee " + account.account_firstname %>
      </h2>
    <% } %>

    <p class="account-update-link">
      <a href="/account/update/<%= account.account_id %>">Update account information</a>
    </p>

    <% if (["Employee", "Admin"].includes(account.account_type)) { %>
      <h3>Inventory Management</h3>
      <p>
        <a href="/inv/">Manage Inventory</a>
      </p>
    <% } %>
  <% } else { %>
    <p class="notice">We could not load your account information.</p>
  <% } %>
</section>
