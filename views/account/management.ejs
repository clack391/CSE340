<section class="account-management">
  <%- messages() %>

  <h1><%= typeof title !== "undefined" ? title : "Account Management" %></h1>

  <% if (locals.accountData) { %>
    <h2>Welcome <%= locals.accountData.account_firstname %></h2>

    <p class="account-update-link">
      <a href="/account/update/<%= locals.accountData.account_id %>">Update account information</a>
    </p>

    <% if (["Employee", "Admin"].includes(locals.accountData.account_type)) { %>
      <h3>Inventory Management</h3>
      <p>
        <a href="/inv/">Manage Inventory</a>
      </p>
    <% } %>
  <% } else { %>
    <p class="notice">We could not load your account information.</p>
  <% } %>
</section>
