<section class="inventory-form">
  <h1><%= typeof title !== 'undefined' ? title : 'Add Vehicle' %></h1>
  <%- messages() %>

  <% if (errors) { %>
    <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
    </ul>
  <% } %>

  <form class="auth-form" action="/inv/add-inventory" method="post">
    <div class="form-field">
      <label for="classificationList">Classification</label>
      <%- typeof classificationList !== 'undefined' ? classificationList : '' %>
    </div>

    <div class="form-field">
      <label for="inv_make">Make</label>
      <input
        type="text"
        id="inv_make"
        name="inv_make"
        required
        value="<%= locals.inv_make || '' %>"
      >
    </div>

    <div class="form-field">
      <label for="inv_model">Model</label>
      <input
        type="text"
        id="inv_model"
        name="inv_model"
        required
        value="<%= locals.inv_model || '' %>"
      >
    </div>

    <div class="form-field">
      <label for="inv_year">Year</label>
      <input
        type="number"
        id="inv_year"
        name="inv_year"
        min="1900"
        max="9999"
        required
        value="<%= locals.inv_year || '' %>"
      >
    </div>

    <div class="form-field">
      <label for="inv_description">Description</label>
      <textarea
        id="inv_description"
        name="inv_description"
        rows="4"
        required
      ><%= locals.inv_description || '' %></textarea>
    </div>

    <div class="form-field">
      <label for="inv_image">Image Path</label>
      <input
        type="text"
        id="inv_image"
        name="inv_image"
        required
        value="<%= locals.inv_image || '/images/vehicles/no-image.png' %>"
      >
    </div>

    <div class="form-field">
      <label for="inv_thumbnail">Thumbnail Path</label>
      <input
        type="text"
        id="inv_thumbnail"
        name="inv_thumbnail"
        required
        value="<%= locals.inv_thumbnail || '/images/vehicles/no-image-tn.png' %>"
      >
    </div>

    <div class="form-field">
      <label for="inv_price">Price</label>
      <input
        type="number"
        id="inv_price"
        name="inv_price"
        min="0"
        step="0.01"
        required
        value="<%= locals.inv_price || '' %>"
      >
    </div>

    <div class="form-field">
      <label for="inv_miles">Mileage</label>
      <input
        type="number"
        id="inv_miles"
        name="inv_miles"
        min="0"
        step="1"
        required
        value="<%= locals.inv_miles || '' %>"
      >
    </div>

    <div class="form-field">
      <label for="inv_color">Color</label>
      <input
        type="text"
        id="inv_color"
        name="inv_color"
        required
        value="<%= locals.inv_color || '' %>"
      >
    </div>

    <button class="btn btn-primary" type="submit">Add Vehicle</button>
  </form>
</section>
