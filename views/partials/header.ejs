<header id="top-header" role="banner" class="site-header container">
  <h1 class="siteName">
    <a href="/" title="Return to home page">CSE Motors</a>
  </h1>
  <div id="tools">
    <% if (locals.loggedin) { %>
      <a
        title="Go to your account dashboard"
        href="/account"
        aria-label="Account dashboard link"
        class="account-greeting"
      >
        Welcome <%= locals.accountData?.account_firstname %>
      </a>
      <a title="Click to log out" href="/account/logout" aria-label="Logout">Logout</a>
    <% } else { %>
      <a title="Click to log in" href="/account/login" aria-label="My Account">My Account</a>
    <% } %>
  </div>
</header>
